{
  "entries": [
    "./assembly/index.ts"
  ],
  "targets": {
    "debug": {
      "outFile": "build/debug.wasm",
      "textFile": "build/debug.wat",
      "sourceMap": true,
      "debug": true
    },
    "release": {
      "outFile": "build/release.wasm",
      "textFile": "build/release.wat",
      "optimize": true,
      "sourceMap": true,
      "optimizeLevel": 4,
      "shrinkLevel": 0,
      "converge": true,
      "noAssert": true
    }
  },
  "options": {
    "bindings": "esm"
  }
}
